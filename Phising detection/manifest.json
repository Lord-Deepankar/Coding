{
  "manifest_version": 3,
  "name": "PhishingGuard",
  "version": "1.0",
  "description": "Detects phishing login pages.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://*.firebaseio.com/*", 
    "https://*.googleapis.com/*",
    "https://www.gstatic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "PhishingGuard"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/warning.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}